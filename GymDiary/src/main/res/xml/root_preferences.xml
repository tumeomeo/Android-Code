<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Backup: Local Storage">

        <Preference
            app:key="importcsv"
            app:summary="Nhập bản sao lưu trước đó từ bộ nhớ điện thoại"
            app:title="Import"
            app:useSimpleSummaryProvider="false" />

        <Preference
            app:key="exportcsv"
            app:summary="Xuất sang bộ nhớ điện thoại"
            app:title="Export"
            app:useSimpleSummaryProvider="false" />

        <Preference
            app:key="deletedata"
            app:summary="Xóa tất cả dữ liệu tập luyện của ứng dụng"
            app:title="Clear Data"
            app:useSimpleSummaryProvider="false" />

    <PreferenceCategory app:title="Backup: Webdav">

        <SwitchPreference
            android:defaultValue="false"
            android:key="togglewebdav"
            android:title="Sao lưu" />
        <Preference
            app:key="importwebdav"
            app:summary="Nhập bản sao lưu trước đó từ máy chủ"
            app:title="Import"
            app:useSimpleSummaryProvider="false" />

        <Preference
            app:key="exportwebdav"
            app:summary="Xuất sang máy chủ webdav"
            app:title="Export"
            app:useSimpleSummaryProvider="false" />
        <EditTextPreference
            android:key="webdavurl"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Url"
            app:summary="http://example.com" />
        <EditTextPreference
            android:key="webdavusername"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Username"
            app:summary="user" />
        <EditTextPreference
            android:key="webdavpassword"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />

        <Preference
            android:key="webdavcheckconnection"
            android:summary="Kiểm tra cấu hình webdav"
            android:title="Check Connection" />

    </PreferenceCategory>
    </PreferenceCategory>

